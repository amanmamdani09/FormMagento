<?xml version="1.0" encoding="UTF-8"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

   <table name="form" resource="default" comment="Form">
      <column xsi:type="int" name="id" identity="true" comment="ID"/>
      <column xsi:type="varchar" name="name" length="255" comment="Name"/>
      <column xsi:type="varchar" name="gender" length="10" comment="Gender"/>
      <column xsi:type="varchar" name="email" length="255" comment="Email"/>
      <column xsi:type="varchar" name="phone" length="10" comment="Phone"/>
      <column xsi:type="varchar" name="password" length="255" comment="Password"/>
      <!-- <column xsi:type="varchar" name="c_password" length="25" comment="Confirm Password"/> -->

      <constraint xsi:type="primary" referenceId="PRIMARY">
         <column name="id" />
      </constraint>

   </table>
</schema>